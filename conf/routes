# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/article					controllers.Application.listArticle()
GET		/article/create				controllers.Application.createArticle()
POST	/article/create				controllers.Application.newArticle()
GET		/article/:title				controllers.Application.viewArticle(title: String)
GET		/article/:title/update		controllers.Application.updateArticle(title: String)
GET		/article/:title/delete		controllers.Application.deleteArticle(title: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
