# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Application.index()
GET		/login							controllers.Application.loginForm()
POST	/login							controllers.Application.login()
GET		/article						controllers.ArticleApp.listArticle()
GET		/article/create				controllers.ArticleApp.createArticleForm()
POST	/article/create				controllers.ArticleApp.createArticle()
GET		/article/:title				controllers.ArticleApp.viewArticle(title: String)
GET		/article/:title/update		controllers.ArticleApp.updateArticleForm(title: String)
POST	/article/:title/update		controllers.ArticleApp.updateArticle(title: String)
GET		/article/:title/delete		controllers.ArticleApp.deleteArticleForm(title: String)
POST	/article/:title/delete		controllers.ArticleApp.deleteArticle(title: String)
GET		/user							controllers.UserApp.viewUser()
GET		/user/create					controllers.UserApp.createUserForm()
POST	/user/create					controllers.UserApp.createUser()
GET		/user/update					controllers.UserApp.updateUserForm()
POST	/user/update					controllers.UserApp.updateUser()
GET		/user/delete					controllers.UserApp.deleteUserForm()
POST	/user/delete					controllers.UserApp.deleteUser()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file					controllers.Assets.at(path="/public", file)
