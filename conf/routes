# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Application.index()
GET		/login							controllers.Application.loginForm()
POST	/login							controllers.Application.login()
GET		/article						controllers.Articles.listArticle()
GET		/article/create				controllers.Articles.createArticleForm()
POST	/article/create				controllers.Articles.createArticle()
GET		/article/:title				controllers.Articles.viewArticle(title: String)
GET		/article/:title/update		controllers.Articles.updateArticleForm(title: String)
POST	/article/:title/update		controllers.Articles.updateArticle(title: String)
GET		/article/:title/delete		controllers.Articles.deleteArticleForm(title: String)
POST	/article/:title/delete		controllers.Articles.deleteArticle(title: String)
GET		/user							controllers.Users.viewUser()
GET		/user/create					controllers.Users.createUserForm()
POST	/user/create					controllers.Users.createUser()
GET		/user/update					controllers.Users.updateUserForm()
POST	/user/update					controllers.Users.updateUser()
GET		/user/delete					controllers.Users.deleteUserForm()
POST	/user/delete					controllers.Users.deleteUser()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file					controllers.Assets.at(path="/public", file)
